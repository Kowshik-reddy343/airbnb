<% layout("/layouts/boilerplate")%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
    <h3 >Create a New Listing</h3>
    <form method="POST" action="/listings" class=" needs-validation"  novalidate >
      <div>
      <label for="title" class="form-label">enter title</label>
      <input name="listing[title]"  type="text" class="form-control" required/>
    </div>
    <br>
    <div>
      <label for="description" class="form-label">enter description</label>
      <textarea
        name="listing[description]"
        class="form-control"  required
      ></textarea>
    </div>
    <br>
     <div>
      <label for="image" class="form-label" >image link</label>
      <input
      name="listing[image]"
      type="text"
      class="form-control" required
    />
     </div>
     <br>   
     <div class="row">
      <div class="col-4">
        <label class="form-label" for="price">Price :</label><br>
        <input required class="form-control" name="listing[price]" placeholder="1200" >
      </div> 
      <div class="col-8">
        <label for="country" class="form-label">enter country</label>
        <input name="listing[country]"  type="text"  class="form-control" required />
      </div>
     </div> 
    <br>
    <div>
      <label for="location" class="form-label">enter location</label>
      <input
      name="listing[location]"
      type="text"
      class="form-control"  required
    />
    </div>
    <br>
    <button>Add</button>
    <br>

    </form>
  </div>
</div>
</body>
