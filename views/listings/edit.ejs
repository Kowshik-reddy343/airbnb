<% layout("/layouts/boilerplate")%>
<body>
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
     
      <div>
        <label for="title" class="form-label">enter title</label>
        <input name="listing[title]"  type="text" class="form-control" value="<%= listing.title %>"/>
      </div>
      <br>
      <div>
        <label for="description" class="form-label">enter description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          placeholder="<%= listing.description %>"
        ></textarea>
      </div>
      <br>
       <div>
        <label for="image" class="form-label">image link</label>
        <input
        name="listing[image]"
        type="text"
        class="form-control"
        value="<%= listing.image %>"
      />
       </div>
       <br>   
       <div class="row">
        <div class="col-4">
          <label for="price" class="form-label">enter cost per day</label>
          <input name="listing[price]"  type="number" class="form-control" value="<%= listing.price %>" />
        </div> 
        <div class="col-8">
          <label for="country" class="form-label">enter country</label>
          <input name="listing[country]"  type="text"  class="form-control"  value="<%= listing.country %>"/>
        </div>
       </div> 
      <br>
      <div>
        <label for="location" class="form-label">enter location</label>
        <input
        name="listing[location]"
        type="text"
        class="form-control"
        value="<%= listing.location %>"
      />
      </div>
      <button>Edit</button>
    </form>
</body>
